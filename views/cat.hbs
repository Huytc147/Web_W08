<div class="container">
  <div class="row">
    <!-- Cột bên trái: Danh sách Categories -->
    <div class="col-6 px-1">
      <fieldset class="border rounded-3 p-3 bg-light">
        <legend class="fw-bold">Categories</legend>
        <table class="table table-striped table-hover rounded">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Title</th>
            </tr>
          </thead>
          <tbody class="table-group-divider">
            {{#if categories.length}}
              {{#each categories}}
                <tr 
                  onclick="location.href='/categories/select/{{this.id}}'" 
                  class="{{#if this.current}}table-active table-info{{/if}}"
                  style="cursor: pointer;"
                >
                  <th scope="row">{{this.id}}</th>
                  <td>{{this.title}}</td>
                </tr>
              {{/each}}
            {{else}}
              <tr>
                <td colspan="2" class="text-center text-muted py-3">
                  Không có danh mục nào
                </td>
              </tr>
            {{/if}}
          </tbody>
        </table>
      </fieldset>
    </div>

    <!-- Cột bên phải: Form chọn hoặc thêm/sửa Category -->
    <div class="col-6 px-1">
      <fieldset class="border rounded-3 p-3 bg-light">
        <legend class="fw-bold">Selected Category</legend>
        <form action="#" method="post">
          <input 
            type="hidden" 
            name="id" 
            value="{{#if selectedCategory}}{{selectedCategory.id}}{{/if}}"
          >
          <div class="mb-3">
            <label for="title" class="form-label fw-semibold">Category Title</label>
            <input 
              type="text" 
              name="title" 
              id="title" 
              class="form-control" 
              required 
              placeholder="Enter category title"
              value="{{#if selectedCategory}}{{selectedCategory.title}}{{/if}}"
            >
          </div>
          <div class="mb-3 d-flex justify-content-around">
            <button 
              type="submit" 
              formaction="/categories/add" 
              class="btn btn-primary"
            >
              Add Category
            </button>
            <button 
              type="submit" 
              formaction="/categories/update" 
              class="btn btn-success"
            >
              Update Category
            </button>
          </div>
        </form>
      </fieldset>
    </div>
  </div>
</div>
