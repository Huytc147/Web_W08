<div class="container">
    <div class="row">
        <div class="col-12 col-md-6">
            <div class="ratio ratio-1x1">
                <img src="/imgs/p{{product.id}}.png" alt="{{product.name}}" class="img-fluid">
            </div>
        </div>
        <div class="col-12 col-md-6">
            <h2>{{product.title}}</h2>
            <p class="mt-2">{{product.description}}</p>
            <h4 class="mt-4">Price: ${{product.price}}</h4>
            <button class="btn btn-success mt-4">Add to Cart</button>
        </div>
    </div>
</div>