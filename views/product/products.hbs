<style>
  .card { display: flex; flex-direction: column; height: 100%; } .card-body {
  flex: 1; } .card-footer { margin-top: auto; } .card-img-top { height: 300px;
  object-fit: contain; background: #f5f5f5; padding: 10px; } .card-title {
  overflow: hidden; text-overflow: ellipsis; white-space: nowrap; } .card-text {
  overflow: hidden; text-overflow: ellipsis; display: -webkit-box;
  -webkit-line-clamp: 2; -webkit-box-orient: vertical; }
</style>

<div class="row row-cols-1 row-cols-md-3 g-4">
  {{#each products}}
    <div class="col">
      <div class="card">
        <img
          src="/imgs/p{{this.id}}.png"
          class="card-img-top"
          alt="{{this.title}}"
          onerror="this.src='/imgs/placeholder.png'"
        />
        <div class="card-body">
          <h5 class="card-title">{{this.title}}</h5>
          <p class="card-text">{{this.description}}</p>
        </div>
        <div class="card-footer text-center">
          <a href="/products/{{this.id}}" class="btn btn-primary">Xem chi tiáº¿t</a>
        </div>
      </div>
    </div>
  {{/each}}
</div>