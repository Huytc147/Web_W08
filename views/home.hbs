<style>

  .product-img-wrapper { width: 100%; aspect-ratio: 1 / 1; overflow: hidden;
  display: flex; justify-content: center; align-items: center; background-color:
  #f8f9fa; / padding: 8px; border-bottom: 1px solid #eee; } .product-img-wrapper
  img { max-width: 100%; max-height: 100%; object-fit: contain; } .row.g-4 .col
  { display: flex; } .card.h-100 { display: flex; flex-direction: column;
  box-shadow: 0 2px 4px #0000000d; } .card-body { flex-grow: 1; padding-top:
